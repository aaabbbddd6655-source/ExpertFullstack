# ===========================================
# IVEA Order Tracking - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# Generate secrets: openssl rand -base64 32

# ============ REQUIRED SETTINGS ============

# Application Mode
NODE_ENV=production
PORT=5000

# Database (PostgreSQL on Hostinger VPS)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://ivea_user:YOUR_SECURE_PASSWORD@localhost:5432/ivea_orders

# If using SSL connection (check with your provider)
# DATABASE_SSL=true

# Session Secret (REQUIRED - generate with: openssl rand -base64 32)
SESSION_SECRET=GENERATE_A_RANDOM_32_CHAR_SECRET_HERE

# JWT Secret (REQUIRED - generate with: openssl rand -base64 64)
JWT_SECRET=GENERATE_A_RANDOM_64_CHAR_SECRET_HERE

# Seed/Setup Secret (for initial database seeding)
SETUP_SECRET=your-setup-secret-for-seeding

# Domain Configuration
DOMAIN=https://order-ivea.com

# ============ OPTIONAL SETTINGS ============

# Admin Account (created on first run if not exists)
# ADMIN_EMAIL=admin@ivea.com
# ADMIN_PASSWORD=your-secure-admin-password

# Google Cloud Storage (for media files)
# Required if you want to enable file uploads
# GCS_BUCKET_NAME=your-bucket-name
# GCS_PROJECT_ID=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Email Configuration (for notifications)
# Required for sending order notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@order-ivea.com

# ============ HOW TO GENERATE SECRETS ============
# Run these commands in terminal:
#
# SESSION_SECRET:
#   openssl rand -base64 32
#
# JWT_SECRET:
#   openssl rand -base64 64
#
# SETUP_SECRET:
#   openssl rand -hex 16
